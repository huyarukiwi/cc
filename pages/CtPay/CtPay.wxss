/* pages/CtPay/CtPay.wxss */
.ctpayTit{
  margin: 37rpx 40rpx 0;
  padding-bottom:  42rpx;
  display: flex;
  border-bottom: 1px solid #CBCBCB;
}
.ctpayTits{
  width: 65%;
  line-height: 62rpx;
  font-family: PingFangSC-Semibold;
  font-size: 44rpx;
  color: #333333;
  letter-spacing: 0;
}
.ctpayDz{
  width: 250rpx;
  padding:0 33rpx;
  height: 62rpx;
  background: #FFFFFF;
  border: 1px solid #CBCBCB;
  border-radius: 8rpx;
  text-align: right;
  line-height: 56rpx;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #409EFF;
  letter-spacing: 0;
}
.CreateAddressList{
  padding:43rpx 20rpx 46rpx;
  margin:  0 40rpx;
  display: flex;
  position: relative;
  border-bottom: 1px solid #CBCBCB;
}
.CreateAddressListTit{
  width: 190rpx;
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #333333;
  letter-spacing: 0;
}
.CreateAddressList input {
  padding-left: 12rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  width: 400rpx;
  letter-spacing: 0;
}
.CreateAddressListTitImg{
  line-height: 48rpx;
  width: 19rpx;
  height: 37rpx;
  position: absolute;
  right: 20rpx;
  top: 43rpx;
}
.CreateAddressListTitImg image{
  width: 100%;
  height: 100%;
}
.CreateAddressList1, .CreateAddressList2{
  padding-left: 20rpx;
  box-sizing: border-box;
  display: inline-block;
  width: 50%;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #999999;
  letter-spacing: 0;
}
.CreateAddressList2{
  padding-right: 50rpx;
  text-align: right;
}
.ctpayAgreement{
  margin: 0 36rpx;
  background: #FFFFFF;
  border: 1px solid #CBCBCB;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 26rpx;
  margin-bottom: 130rpx;
}
.ctpayAgreementTit{
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  line-height: 40rpx;
}
.ctpayAgreementTxt{
  padding-top: 3rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #CBCBCB;
  letter-spacing: 0;
  line-height: 35rpx;
}
.ctpayAgreementInpus{
  height: 42rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.ctpayAgreementInpus text{
  padding-left: 20rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #409EFF;
  letter-spacing: 0;
}
.fiexdBtns{
  bottom: 0;
  left: 0;
  padding: 20rpx 40rpx;
  height: 88rpx;
  display: flex;
  background: #FFFFFF; 
}
.fiexdBtnsTxt , .fiexdBtnsBtn{
  width: 50%;
  height: 88rpx;
}
.fiexdBtnsBtn button{
  width: 334rpx;
  height: 88rpx;
  background: #409EFF;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.fiexdBtnsTxt1{
  padding-top: 6rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FF2040;
  line-height: 45rpx;
  letter-spacing: 0;
  padding-bottom: 4rpx;
  padding-left: 10rpx;
}
.fiexdBtnsTxt2{
  line-height: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #333333;
  letter-spacing: 0;
  padding-left: 10rpx;
}
.hide{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.40);
}
.hidePay{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 55;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 385rpx;
  background: #FFFFFF;
  opacity: 1;
  border-radius: 22rpx;
}
.hidePayTxt{
  height: 287rpx;
  text-align: center;
  opacity: 1;
}
.hidePayTxt1{
  padding-top: 56rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #000000;
}
.hidePayTxt2{
  padding-top: 42rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #999999;
  line-height: 45rpx;
}
.hidePay button{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #409EFF;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 1;
  letter-spacing: 0;
  border-radius: 0 0 22rpx 22rpx;
}