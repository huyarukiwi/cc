/* pages/kdps/kdps.wxss */
.container{
  width: 100%;
  height: auto;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.head{
  width: 100%;
  height: 140rpx;
  border-bottom: 1rpx solid #CBCBCB;
  font-size: 44rpx;
  color: #333;
  line-height: 140rpx;
  font-weight: bold;
}
.son{
  width: 100%;
  height: 138rpx;
  font-size: 32rpx;
  color: #999;
  line-height: 138rpx;
  text-indent: 20rpx;
  border-bottom: 1rpx solid #CBCBCB;
}
.son input{
  width: 300rpx;
  height: 138rpx;
  float: right;
  text-align: right;
  font-size: 32rpx;
  color: #999;
}
.ts{
  width: 100%;
  height: 110rpx;
  margin-top: 44rpx;
}
.ts text{
  width: 100%;
  height: auto;
  display: block;
  font-size: 24rpx;
  color: #FF2040;
  line-height: 33rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.an{
  width: 710rpx;
  height: 88rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #409EFF;
  border-radius: 8rpx;
  position: fixed;
  bottom: 20rpx;
  left:20rpx;
}